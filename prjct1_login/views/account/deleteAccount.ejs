<%- include('../includes/header.ejs') %>

		<div class="container">

			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Konfirmasi Delete Account</h2>
				</div>
			</div>

			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">

					<% if(message) { %>
						<h5 class="text-center mb-4"><%= message %></h5>
					<% } %>

					<div class="login-wrap p-4 p-md-5">

						<div class="icon d-flex align-items-center justify-content-center">
							<span class="fa fa-user-o"></span>
						</div>

						<h3 class="text-center mb-4">Halo, <%= user.nama %>, Silahkan Konfirmasikan Token Hapus Akun Anda!</h3>

						<form action="/delete_account" class="login-form" method="post">

							<div class="form-group">

								<input type="hidden" name="_csrf" value="<%= csrfToken %>">

								<input type="text" class="form-control rounded-left" name="tokenHapusAkun" placeholder="Token Hapus Akun" required minlength="3">
							</div>

							<div class="form-group d-md-flex">
								<div class="w-50 text-md-left">
									<a href="/delete_account_get_token">Minta Token</a>
								</div>

								<div class="w-50 text-md-right">
									<a href="/">Kembali</a>
								</div>
							</div>

							<div class="form-group">
								<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Konfirmasi Hapus Akun</button>
							</div>
					  </form>

	        		</div>
				</div>
			</div>
		</div>
	</section>

